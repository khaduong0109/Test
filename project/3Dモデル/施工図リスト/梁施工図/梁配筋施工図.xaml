<Window x:Class="RevitProjectDataAddin.梁配筋施工図"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:RevitProjectDataAddin"
        mc:Ignorable="d"
        Title="梁配筋施工図"
        Height="1300" Width="1150" ResizeMode="NoResize" FontFamily="Yu Mincho">
    <Window.Resources>
        <SolidColorBrush x:Key="TitleColor1" Color="Blue"/>
        <SolidColorBrush x:Key="TitleColor2" Color="Orange"/>
        <SolidColorBrush x:Key="Label" Color="Green"/>
        <SolidColorBrush x:Key="注意" Color="Red"/>
    </Window.Resources>

    <Grid Background="White">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Height="auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="梁配筋施工図" FontSize="30" Margin="540,10,0,0"
                           Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <TextBlock Foreground="{StaticResource TitleColor1}" Text="階・通りを選択"
                           FontSize="20" Margin="10,50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                <TextBlock FontSize="18" Margin="10,80,0,0" Text="階を選択"
                           VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <ComboBox x:Name="階を選択ComboBox"
                          SelectedItem="{Binding 階を選択, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          VerticalAlignment="Top" FontSize="18" Height="32"
                          Grid.Row="1" Margin="10,0,20,0" Grid.Column="0"
                          SelectionChanged="Combo_SelectionChanged"/>

                <TextBlock FontSize="18" Margin="10,80,0,0" Text="通を選択"
                           VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1"/>
                <ComboBox x:Name="通を選択ComboBox"
                          SelectedItem="{Binding 通を選択, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          VerticalAlignment="Top" FontSize="18" Height="32"
                          Grid.Row="1" Margin="10,0,20,0" Grid.Column="1"
                          SelectionChanged="Combo_SelectionChanged"/>

                <TextBlock Foreground="{StaticResource TitleColor1}" Text="プレビュー"
                           FontSize="20" Margin="10,20,0,0" TextWrapping="Wrap"
                           HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="2"/>

                <Border BorderBrush="Silver" BorderThickness="1" Margin="10,0,20,0"
                        Background="White" VerticalAlignment="Top" Grid.ColumnSpan="2"
                        Height="auto" Grid.Row="3">
                    <!-- Đặt tên để tham chiếu khi cần -->
                    <ItemsControl x:Name="GridList" ItemsSource="{Binding gridbotsecozu}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid x:Name="Botsecozu">
                                    <Canvas x:Name="MyCanvas"
                                             Focusable="True"
                                             ToolTip="Wheel: Zoom | Middle drag / Space+Left drag: Pan | Middle double-click/F: Fit"
                                            Height="1000"
                                            Loaded="BotsecozuCanvas_Loaded"
                                            />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <StackPanel Orientation="Horizontal" Margin="10,10,0,10"
                            Grid.ColumnSpan="2" Grid.Row="4">
                    <Button Content="Export DXF" Width="140" Height="28"
                            Click="ExportDxf_Click"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
