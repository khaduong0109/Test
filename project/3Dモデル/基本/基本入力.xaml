<Window x:Class="RevitProjectDataAddin.基本入力"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:RevitProjectDataAddin" 
      Title="基本入力" Height="auto" Width="1150" ResizeMode="NoResize" FontFamily="Yu Mincho">
    <!-- Định nghĩa tài nguyên màu -->
    <Window.Resources>
        <SolidColorBrush x:Key="TitleColor1" Color="Blue"/>
        <SolidColorBrush x:Key="TitleColor2" Color="Orange"/>
        <SolidColorBrush x:Key="Label" Color="Green"/>
        <SolidColorBrush x:Key="注意" Color="Red"/>
    </Window.Resources>
    <Grid Background="White">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="5,0,5,0">
            <Grid Height="auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>
                <TextBlock Text="基本入力" FontSize="30" Margin="540,10,0,0" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Left" />
                <TextBlock Foreground="{StaticResource TitleColor1}" Text="通り心の数量・名前を入力" FontSize="20" Margin="10,33,0,0" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBlock FontSize="18" Margin="10,62,0,0" TextWrapping="Wrap" Text="水平方向の通りの数量" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <TextBox InputMethod.IsInputMethodEnabled="False" x:Name="NUMBERXTEXTBOX"  Margin="10,104,22,0" Text="{Binding NumberX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="NumberTextBox_PreviewTextInput" MaxLength="50"  VerticalAlignment="Top" FontSize="18" Height="26"/>
                <StackPanel Margin="10,145,24,0" VerticalAlignment="Top">
                    <ItemsControl x:Name="NameX">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Margin="0,5,0,0">
                                    <TextBlock Text="{Binding Index, StringFormat='水平方向の通りの名称 No.{0}'}" FontSize="18" Margin="0,0,0,10" />
                                    <TextBox InputMethod.IsInputMethodEnabled="False" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="18" Margin="0,0,0,10"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                <TextBlock FontSize="18" Margin="7,62,0,0" TextWrapping="Wrap" Text="鉛直方向の通りの数量" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" />
                <TextBox InputMethod.IsInputMethodEnabled="False" x:Name="NUMBERYTEXTBOX" Margin="7,104,18,0" Grid.Column="1" Text="{Binding NumberY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="NumberTextBox_PreviewTextInput" VerticalAlignment="Top" FontSize="18" Height="26"/>
                <StackPanel  Margin="7,145,20,0" VerticalAlignment="Top" Grid.Column="1">
                    <ItemsControl x:Name="NameY">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Margin="0,5,0,0">
                                    <TextBlock Text="{Binding Index, StringFormat='鉛直方向の通りの名称 No.{0}'}" FontSize="18" Margin="0,0,0,10" />
                                    <TextBox InputMethod.IsInputMethodEnabled="False" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="18" Margin="0,0,0,10"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <TextBlock Foreground="{StaticResource TitleColor1}" Margin="10,10,0,0" TextWrapping="Wrap" FontSize="20" Text="通り間の距離を入力" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="1"/>
                <Border BorderBrush="Silver" BorderThickness="1" Margin="10,49,181,0" Background="White" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="auto" Grid.Row="1" Grid.RowSpan="1">
                    <Grid>
                        <TextBlock FontSize="18" TextWrapping="Wrap" Text="X方向" HorizontalAlignment="Left" Margin="10"/>
                        <ItemsControl x:Name="xTextBox">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel x:Name="xTextBox" HorizontalAlignment="Left" Margin="76,0,0,0">
                                        <StackPanel Orientation="Horizontal" Margin="20">
                                            <StackPanel Orientation="Vertical" Height="70">
                                                <TextBlock Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" FontSize="18" Margin="0,0,0,10"/>
                                                <TextBox InputMethod.IsInputMethodEnabled="False" FontSize="18" Text="{Binding Span, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="NumberTextBox_PreviewTextInput1" Width="200"/>
                                            </StackPanel>
                                            <TextBlock FontSize="18" Text="" Width="50" Margin="10,0,0,0"/>
                                            <Canvas x:Name="XCanvas" Width="440" Height="215"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
                <Border BorderBrush="Silver" BorderThickness="1" Background="White" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="10,30,181,0" Height="auto" Grid.Row="2">
                    <Grid>
                        <TextBlock FontSize="18" TextWrapping="Wrap" Text="Y方向" HorizontalAlignment="Left" Margin="10"/>
                        <ItemsControl x:Name="yTextBox">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel x:Name="yTextBox" HorizontalAlignment="Left" Margin="76,0,0,0">
                                        <StackPanel Orientation="Horizontal" Margin="20">
                                            <StackPanel Orientation="Vertical" Height="70">
                                                <TextBlock Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" FontSize="18" Margin="0,0,0,10"/>
                                                <TextBox InputMethod.IsInputMethodEnabled="False" Text="{Binding Span, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="NumberTextBox_PreviewTextInput1" FontSize="18" Width="200"/>
                                            </StackPanel>
                                            <TextBlock FontSize="18" Text="" Width="50" Margin="10,0,0,0"/>
                                            <Canvas x:Name="YCanvas" Width="440" Height="215"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
                <TextBlock Foreground="{StaticResource TitleColor1}" HorizontalAlignment="Left" FontSize="20" Margin="10,15,0,0" TextWrapping="Wrap" Text="レベル(階)を入力" VerticalAlignment="Top" Grid.Row="3" />
                <TextBlock HorizontalAlignment="Left" Margin="10,46,0,0" FontSize="18" TextWrapping="Wrap" Text="階数を入力" VerticalAlignment="Top" Grid.Row="3"/>
                <TextBox InputMethod.IsInputMethodEnabled="False" x:Name="NUMBERKAITEXTBOX" Text="{Binding NumberKai, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="NumberTextBox_PreviewTextInput" FontSize="18" VerticalAlignment="Top" Height="26" Margin="10,91,18,0" Grid.ColumnSpan="2" Grid.Row="3"/>
                <StackPanel Margin="10,130,22,0" VerticalAlignment="Top" Grid.Row="3">
                    <ItemsControl x:Name="NameKai">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Margin="0,5,0,0">
                                    <TextBlock Text="{Binding Index, StringFormat='階の符号 No.{0}'}" Margin="0,0,0,10" FontSize="18"/>
                                    <TextBox InputMethod.IsInputMethodEnabled="False" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="18" Margin="0,0,0,10" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel  Margin="7,130,18,0" Grid.Column="1" VerticalAlignment="Top" Grid.Row="3">
                    <ItemsControl x:Name="ListSpanKai">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Margin="0,5,0,0">
                                    <TextBlock Text="{Binding Index, StringFormat='階高 No.{0}'}" Margin="0,0,0,10" FontSize="18"/>
                                    <TextBox InputMethod.IsInputMethodEnabled="False" Text="{Binding Span, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="NumberTextBox_PreviewTextInput1" FontSize="18" Margin="0,0,0,10" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>