<Window x:Class="RevitProjectDataAddin.基礎リストを入力"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitProjectDataAddin"
             Title="基礎リストを入力"
             mc:Ignorable="d" 
             Height="450" Width="800" ResizeMode="NoResize" FontFamily="Yu Mincho">
    <Canvas>
        <TextBlock Text="基礎リストを入力" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="35" Canvas.Left="279" Canvas.Top="10"/>
        <GroupBox Header="リスト" Canvas.Left="35" Canvas.Top="80">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="各階" FontSize="18"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <ListBox x:Name="FloorNameListBox" ItemsSource="{Binding 基礎リスト}" DisplayMemberPath="各階"
                                 FontSize="18" Width="104" Height="235" SelectionChanged="FloorNameListBox_SelectionChanged"/>
                    </ScrollViewer>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="名基礎" FontSize="18"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" >
                        <ListBox x:Name="ColumnListBox" FontSize="18" SelectionMode="Single" Width="167" Height="235" DisplayMemberPath="Name"/>
                    </ScrollViewer>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="設定" Height="289" Canvas.Left="420" Canvas.Top="80" Width="290" HorizontalAlignment="Center" VerticalAlignment="Top">
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="追加" FontSize="18" Width="80" Margin="5" Click="AddButton_Click"/>
                    <Button Content="入力" FontSize="18" Width="80" Margin="5" Click="EditButton_Click"/>
                    <Button Content="削除" FontSize="18" Width="80" Margin="5" Click="DeleteButton_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="コピー" FontSize="18" Width="80" Margin="5" Click="CopyButton_Click" HorizontalAlignment="Left"/>
                    <Button Content="名前変更" FontSize="18" Width="80" Margin="5" HorizontalAlignment="Left" Click="EditNameButton_Click"/>
                    <Button Content="" FontSize="18" Width="80" Margin="5" HorizontalAlignment="Left"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Canvas>
</Window>
