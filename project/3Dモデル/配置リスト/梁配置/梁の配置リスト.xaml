<Window x:Class="RevitProjectDataAddin.梁の配置リスト"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitProjectDataAddin"
             mc:Ignorable="d" 
             Height="auto" Width="1150" ResizeMode="NoResize" FontFamily="Yu Mincho">
    <!-- Định nghĩa tài nguyên màu -->
    <Window.Resources>
        <SolidColorBrush x:Key="TitleColor1" Color="Blue"/>
        <SolidColorBrush x:Key="TitleColor2" Color="Orange"/>
        <SolidColorBrush x:Key="Label" Color="Green"/>
        <SolidColorBrush x:Key="注意" Color="Red"/>
    </Window.Resources>
    <Grid Background="White">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" >
            <Grid Height="auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="梁配置" FontSize="30" Margin="540,10,0,0" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Left" />
                <TextBlock Foreground="{StaticResource TitleColor1}" Text="梁リストを入力" FontSize="20" Margin="10,50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                <TextBlock FontSize="18" Margin="10,80,0,0" Text="階を選択" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <ComboBox  x:Name="階を選択ComboBox"  SelectedItem="{Binding 階を選択, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" FontSize="18"  Height="32" Grid.Row="1" Margin="10,0,20,0" Grid.Column="0"  SelectionChanged="ComboBox_SelectionChanged"/>
                <TextBlock FontSize="18" Margin="10,80,0,0"  Text="通を選択" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1"/>
                <ComboBox   x:Name="通を選択ComboBox"  SelectedItem="{Binding 通を選択, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" FontSize="18"  Height="32" Grid.Row="1" Margin="10,0,20,0" Grid.Column="1" SelectionChanged="ComboBox_SelectionChanged"/>

                <TextBlock Foreground="{StaticResource TitleColor1}" Text="階・通りに対して梁の「符号・ズレ寸法」を入力" FontSize="20" Margin="10,20,0,0" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="2"/>


                <Border BorderBrush="Silver" BorderThickness="1" Margin="10,0,20,0" Background="White" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="auto" Grid.Row="3">
                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding BeamSegments}" Grid.Row="4" Margin="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="10,10,10,10">
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="{Binding タイトル, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold" FontSize="18" Margin="20,00,0,0"/>
                                            <StackPanel Orientation="Horizontal" Margin="50,10,0,0">
                                                <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                                                    <StackPanel Width="200">
                                                        <TextBlock Text="梁の符号" FontSize="18"/>
                                                        <ComboBox x:Name="梁の符号ComboBox" ItemsSource="{Binding DataContext.梁候補リスト,
                                                                    RelativeSource={RelativeSource AncestorType=Window}}"
                                                      SelectedItem="{Binding 梁の符号, Mode=TwoWay}"
                                                      Height="32" FontSize="18"/>
                                                    </StackPanel>
                                                    <StackPanel Width="200" Margin="0,0,0,0">
                                                        <TextBlock Text="梁の段差" FontSize="18"/>
                                                        <TextBox x:Name="梁の段差" Text="{Binding 梁の段差, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="32" FontSize="18" PreviewTextInput="NumberTextBox_PreviewTextInput1"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                                                    <StackPanel Width="200" Margin="20,0,0,0">
                                                        <TextBlock Text="上側のズレ寸法" FontSize="18"/>
                                                        <TextBox Text="{Binding 上側のズレ寸法, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="32" FontSize="18" PreviewTextInput="NumberTextBox_PreviewTextInput1"/>
                                                    </StackPanel>

                                                    <StackPanel Width="200" Margin="20,0,0,0">
                                                        <TextBlock Text="下側のズレ寸法" FontSize="18"/>
                                                        <TextBox Text="{Binding 下側のズレ寸法, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="32" FontSize="18" PreviewTextInput="NumberTextBox_PreviewTextInput1"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                <!-- Canvas vẽ minh họa -->
                                                <Canvas Height="150" Width="300" Margin="0,-120,0,0" Loaded="Canvas_Loaded"/>
                                            </StackPanel>
                                            <StackPanel Width="200" Margin="20,50,0,0">
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
