<Window x:Class="RevitProjectDataAddin.ProjectSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chọn Dự án" Height="300" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Tên dự án mới:" />
        <TextBox Name="NewProjectNameBox" Margin="0,0,0,10"/>
        <Button Content="Thêm dự án" Click="AddProject_Click" Margin="0,0,0,10"/>

        <ListBox Name="ProjectListBox" Height="100" Margin="0,0,0,10"/>
        <Button Content="Đổi tên dự án" Click="RenameProject_Click" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Xóa" Click="DeleteProject_Click" Width="80" Margin="0,0,10,0"/>
            <Button Content="OK" Click="OkButton_Click" Width="80"/>
        </StackPanel>
    </StackPanel>
</Window>
